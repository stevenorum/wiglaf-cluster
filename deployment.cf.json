{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Parameters": {
        "UserName": {
            "Type": "String",
            "Description": "GitHub user name."
        },
        "OAuthToken": {
            "Type": "String",
            "Description": "GitHub OAuthToken giving AWS access to GitHub."
        },
        "PackageName": {
            "Type": "String",
            "Description": "GitHub package name."
        },
        "PackageBranch": {
            "Type": "String",
            "Description": "GitHub package branch.",
            "Default": "master"
        },
        "BuildTimeout": {
            "Type": "Number",
            "Description": "Max time for the build to take, in minutes.",
            "Default": 5
        }
    },
    "Resources": {
        "CodeBuildArtifactBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
            }
        },
        "BuildPolicy": {
            "Type": "AWS::IAM::ManagedPolicy",
            "Properties": {
                "Description": "",
                "Path": "/",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Resource": [
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/codebuild/${PackageName}-${PackageBranch}"
                                },
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/codebuild/${PackageName}-${PackageBranch}:*"
                                },
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/codebuild/${PackageName}-${PackageBranch}/*"
                                }
                            ],
                            "Action": [
                                "logs:CreateLogGroup",
                                "logs:CreateLogStream",
                                "logs:PutLogEvents"
                            ]
                        },
                        {
                            "Effect": "Allow",
                            "Resource": [
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:s3:::${CodeBuildArtifactBucket}/*"
                                }
                            ],
                            "Action": [
                                "s3:PutObject",
                                "s3:GetObject",
                                "s3:GetObjectVersion"
                            ]
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "ssm:GetParameters"
                            ],
                            "Resource": {
                                "Fn::Sub": "arn:${AWS::Partition}:ssm:${AWS::Region}:${AWS::AccountId}:parameter/CodeBuild/*"
                            }
                        }
                    ]
                }
            }
        },
        "BuildRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "codebuild.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    {
                        "Ref": "BuildPolicy"
                    }
                ],
                "Path": "/"
            }
        },
        "PipelinePolicy": {
            "Type": "AWS::IAM::ManagedPolicy",
            "Properties": {
                "Description": "",
                "Path": "/",
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "codebuild:*",
                                "codedeploy:*"
                            ],
                            "Resource": "*",
                            "Effect": "Allow"
                        },
                        {
                            "Action": [
                                "cloudwatch:*",
                                "s3:*",
                                "sns:*",
                                "ecs:*",
                                "logs:*",
                                "lambda:*",
                                "cloudformation:*",
                                "apigateway:*",
                                "iam:PassRole",
                                "iam:CreatePolicy",
                                "iam:CreateRole",
                                "iam:DeletePolicy",
                                "iam:DeleteRole"
                            ],
                            "Resource": "*",
                            "Effect": "Allow"
                        }
                    ],
                    "Version": "2012-10-17"
                }
            }
        },
        "CloudFormationPolicy": {
            "Type": "AWS::IAM::ManagedPolicy",
            "Properties": {
                "Description": "",
                "Path": "/",
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "s3:GetObject",
                                "s3:GetObjectVersion",
                                "s3:GetBucketVersioning",
                                "s3:PutObject"
                            ],
                            "Resource": {
                                "Fn::Sub": "arn:${AWS::Partition}:s3:::${CodeBuildArtifactBucket}/*"
                            },
                            "Effect": "Allow"
                        },
                        {
                            "Action": [
                                "iam:PassRole",
                                "iam:GetRole",
                                "iam:CreateRole",
                                "iam:DeleteRole",
                                "iam:PutRolePolicy",
                                "iam:AttachRolePolicy",
                                "iam:DeleteRolePolicy",
                                "iam:DetachRolePolicy"
                            ],
                            "Resource": [
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:iam::${AWS::AccountId}:role/*"
                                }
                            ],
                            "Effect": "Allow"
                        },
                        {
                            "Action": [
                                "iam:CreatePolicy",
                                "iam:DeletePolicy"
                            ],
                            "Resource": [
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:iam::${AWS::AccountId}:policy/*"
                                }
                            ],
                            "Effect": "Allow"
                        },
                        {
                            "Action": [
                                "cloudformation:CreateChangeSet"
                            ],
                            "Resource": [
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:cloudformation:${AWS::Region}:aws:transform/Serverless-2016-10-31"
                                }
                            ],
                            "Effect": "Allow"
                        },
                        {
                            "Action": [
                                "codedeploy:CreateApplication",
                                "codedeploy:DeleteApplication",
                                "codedeploy:RegisterApplicationRevision"
                            ],
                            "Resource": [
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:codedeploy:${AWS::Region}:${AWS::AccountId}:application:*"
                                }
                            ],
                            "Effect": "Allow"
                        },
                        {
                            "Action": [
                                "codedeploy:CreateDeploymentGroup",
                                "codedeploy:CreateDeployment",
                                "codedeploy:GetDeployment"
                            ],
                            "Resource": [
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:codedeploy:${AWS::Region}:${AWS::AccountId}:deploymentgroup:*"
                                }
                            ],
                            "Effect": "Allow"
                        },
                        {
                            "Action": [
                                "codedeploy:GetDeploymentConfig"
                            ],
                            "Resource": [
                                {
                                    "Fn::Sub": "arn:${AWS::Partition}:codedeploy:${AWS::Region}:${AWS::AccountId}:deploymentconfig:*"
                                }
                            ],
                            "Effect": "Allow"
                        },
                        {
                            "Action": [
                                "cloudwatch:*",
                                "s3:*",
                                "logs:*",
                                "lambda:*",
                                "cloudformation:*",
                                "apigateway:*"
                            ],
                            "Resource": "*",
                            "Effect": "Allow"
                        }

                    ],
                    "Version": "2012-10-17"
                }
            }
        },
        "PipelineRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "codepipeline.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    {
                        "Ref": "PipelinePolicy"
                    }
                ],
                "Path": "/"
            }
        },
        "CloudFormationRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "cloudformation.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    {
                        "Ref": "CloudFormationPolicy"
                    }
                ],
                "Path": "/"
            }
        },
        "BuildProject": {
            "Type": "AWS::CodeBuild::Project",
            "Properties": {
                "Artifacts": {
                    "Location": {
                        "Ref": "CodeBuildArtifactBucket"
                    },
                    "Name": "build.tgz",
                    "NamespaceType": "BUILD_ID",
                    "Packaging": "NONE",
                    "Path": {
                        "Fn::Sub": "${PackageName}-${PackageBranch}"
                    },
                    "Type": "S3"
                },
                "Environment": {
                    "ComputeType": "BUILD_GENERAL1_SMALL",
                    "Image": "aws/codebuild/eb-python-3.4-amazonlinux-64:2.3.2",
                    "PrivilegedMode": false,
                    "Type": "LINUX_CONTAINER",
                    "EnvironmentVariables": [
                        {
                            "Name": "S3_BUCKET",
                            "Value": {
                                "Ref": "CodeBuildArtifactBucket"
                            },
                            "Type": "PLAINTEXT"
                        }
                    ]
                },
                "BadgeEnabled": false,
                "Description": {
                    "Fn::Sub": "CodeBuild project for branch ${PackageBranch} of package ${PackageName}"
                },
                "Name": {
                    "Fn::Sub": "${PackageName}-${PackageBranch}"
                },
                "ServiceRole": {
                    "Fn::GetAtt": [
                        "BuildRole",
                        "Arn"
                    ]
                },
                "Source": {
                    "Type": "GITHUB",
                    "Location": {
                        "Fn::Sub": "https://github.com/${UserName}/${PackageName}.git"
                    },
                    "Auth": {
                        "Type": "OAUTH",
                        "Resource": {
                            "Ref": "OAuthToken"
                        }
                    }
                },
                "TimeoutInMinutes": {
                    "Ref": "BuildTimeout"
                }
            }
        },
        "Pipeline": {
            "Type": "AWS::CodePipeline::Pipeline",
            "Properties": {
                "ArtifactStore": {
                    "Location": {
                        "Ref": "CodeBuildArtifactBucket"
                    },
                    "Type": "S3"
                },
                "Name": {
                    "Fn::Sub": "${PackageName}-${PackageBranch}"
                },
                "RestartExecutionOnUpdate": true,
                "RoleArn": {
                    "Fn::GetAtt": [
                        "PipelineRole",
                        "Arn"
                    ]
                },
                "Stages": [
                    {
                        "Actions": [
                            {
                                "ActionTypeId": {
                                    "Category": "Source",
                                    "Owner": "ThirdParty",
                                    "Provider": "GitHub",
                                    "Version": "1"
                                },
                                "Configuration": {
                                    "Repo": {
                                        "Ref": "PackageName"
                                    },
                                    "Branch": {
                                        "Ref": "PackageBranch"
                                    },
                                    "Owner": {
                                        "Ref": "UserName"
                                    },
                                    "OAuthToken": {
                                        "Ref": "OAuthToken"
                                    },
                                    "PollForSourceChanges": true
                                },
                                "InputArtifacts": [

                                ],
                                "Name": "Source",
                                "OutputArtifacts": [
                                    {
                                        "Name": "PackageSourceCode"
                                    }
                                ],
                                "RunOrder": 1
                            }
                        ],
                        "Name": "Pull_Source"
                    },
                    {
                        "Actions": [
                            {
                                "ActionTypeId": {
                                    "Category": "Build",
                                    "Owner": "AWS",
                                    "Provider": "CodeBuild",
                                    "Version": "1"
                                },
                                "Configuration": {
                                    "ProjectName": {
                                        "Ref": "BuildProject"
                                    }
                                },
                                "InputArtifacts": [
                                    {
                                        "Name": "PackageSourceCode"
                                    }
                                ],
                                "Name": "CodeBuild",
                                "OutputArtifacts": [
                                    {
                                        "Name": "BuildArtifacts"
                                    }
                                ],
                                "RunOrder": 1
                            }
                        ],
                        "Name": "Bundle_Lambda"
                    },
                    {
                        "Actions": [
                            {
                                "ActionTypeId": {
                                    "Category": "Deploy",
                                    "Owner": "AWS",
                                    "Provider": "CloudFormation",
                                    "Version": "1"
                                },
                                "Configuration": {
                                    "ActionMode": "CHANGE_SET_REPLACE",
                                    "StackName": {
                                        "Fn::Sub": "${AWS::StackName}-LambdaFunction"
                                    },
                                    "ChangeSetName": {
                                        "Fn::Sub": "${AWS::StackName}-LambdaFunction-ChangeSet"
                                    },
                                    "RoleArn": {
                                        "Fn::GetAtt": [
                                            "CloudFormationRole",
                                            "Arn"
                                        ]
                                    },
                                    "TemplatePath": "BuildArtifacts::NewSamTemplate.yml",
                                    "Capabilities": "CAPABILITY_IAM"
                                },
                                "InputArtifacts": [
                                    {
                                        "Name": "BuildArtifacts"
                                    }
                                ],
                                "Name": "Create_Change_Set",
                                "OutputArtifacts": [
                                    {
                                        "Name": "ChangeSet"
                                    }
                                ],
                                "RunOrder": 1
                            },
                            {
                                "ActionTypeId": {
                                    "Category": "Deploy",
                                    "Owner": "AWS",
                                    "Provider": "CloudFormation",
                                    "Version": "1"
                                },
                                "Configuration": {
                                    "ActionMode": "CHANGE_SET_EXECUTE",
                                    "StackName": {
                                        "Fn::Sub": "${AWS::StackName}-LambdaFunction"
                                    },
                                    "ChangeSetName": {
                                        "Fn::Sub": "${AWS::StackName}-LambdaFunction-ChangeSet"
                                    }
                                },
                                "InputArtifacts": [
                                    {
                                        "Name": "ChangeSet"
                                    }
                                ],
                                "Name": "Execute_Change_Set",
                                "OutputArtifacts": [
                                    {
                                        "Name": "NewStack"
                                    }
                                ],
                                "RunOrder": 2
                            }
                        ],
                        "Name": "Update_CF_stack"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "ArtifactBucket": {
            "Description": "Bucket into which all build artifacts will be put.",
            "Value": {
                "Ref": "CodeBuildArtifactBucket"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-ArtifactBucket"
                }
            }
        }
    }
}
